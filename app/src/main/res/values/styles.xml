<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons Style - START -->
    <style name="MaterialBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialBtnStyle.Button1">
        <item name="backgroundTint">@color/mp_blue</item>
        <item name="android:textColor">@color/mp_yellow</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialBtnStyle.Button2">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="rippleColor">@color/mp_blue</item>
        <item name="strokeColor">@color/mp_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MaterialBtnStyle.Button3">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_darkGray</item>
    </style>

    <style name="MaterialBtnStyle.Button4">
        <item name="backgroundTint">@color/mp_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialBtnStyle.Button5">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_red</item>
        <item name="rippleColor">@color/mp_red</item>
        <item name="strokeColor">@color/mp_red</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MaterialBtnStyle.Button6">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="rippleColor">@color/mp_darkGray</item>
        <item name="strokeColor">@color/mp_darkGray</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MaterialBtnStyle.Button7">
        <item name="backgroundTint">@color/mp_yellow</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialBtnStyle.Button8" parent="MaterialBtnStyle.Button6">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FlatButtonStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="FlatButtonStyle2" parent="FlatButtonStyle1">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/custom_blue_ripple_effect</item>
    </style>

    <style name="FlatButtonStyle3">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/custom_blue_ripple_effect</item>
    </style>

    <style name="FlatButtonStyle4" parent="FlatButtonStyle1">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mp_black_title</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/custom_blue_ripple_effect</item>
    </style>

    <style name="FlatButtonStyle5" parent="FlatButtonStyle4">
        <item name="android:textColor">@color/mp_darkGray</item>
        <item name="buttonTint">@color/mp_darkGray</item>
    </style>

    <style name="FlatButtonStyle6">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/custom_blue_corner_ripple_effect</item>
    </style>

    <style name="FlatButtonStyle7" parent="FlatButtonStyle1">
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/custom_blue_ripple_effect</item>
    </style>

