        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/mp_yellow</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TVFontStyle9" parent="TVFontStyle8">
        <item name="android:background">@color/mp_red</item>
